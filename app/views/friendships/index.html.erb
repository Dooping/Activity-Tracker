<p id="notice"><%= notice %></p>

<h1>Friendships</h1>

<h2>Invites</h2>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @invites.each do |invite| %>
      <tr>
        <td><%= link_to invite.user.profile.name, invite.user.profile %></td>
        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Accept',edit_friendship_path(invite) %></td>
        <td><%= link_to 'Reject', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Friends</h2>

<form>
  <input id="searchbox" type="text" name="search">
  <input type="submit" value="search">
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= link_to friendship.user.profile.name, friendship.user.profile %></td>
        <td><%= link_to 'Show', friendship %></td>
        <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path %>
