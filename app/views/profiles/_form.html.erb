<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :birth %><br>
    <%= f.date_select(:birth,:start_year => Time.now.year - 10,:end_year => 1910)  %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, ['Male', 'Female', 'Not telling'] %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.number_field :weight, :class => 'text_field' %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.country_select :country, priority_countries: ["PT","es","GB","fr"] %>
  </div>
  <div class="field">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
