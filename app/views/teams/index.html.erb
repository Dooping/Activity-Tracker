<ul class="list_teams">
<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Leader</th>
      <th>Description</th>
      <th>Sport</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= Profile.all.where(id: team.leader_id).first.name %></td>
        <td><%= team.description %></td>
        <td><%= Sport.all.where(id: team.sport_id).first.name %></td>
        <td><%= Profile.all.where(id: team.profile_id).first.name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
</ul>